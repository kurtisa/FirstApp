<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.example.kurtis.firstapp.MainMenu"
    tools:showIn="@layout/app_bar_main_menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="8dp">

            <ImageButton
                android:id="@+id/noteRythm"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/cool_quarter" />

            <ImageButton
                android:id="@+id/restRhythm"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/restingman" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/faceLearn"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/spaces_bird"

                    />

                <ImageButton
                    android:id="@+id/faceTouch"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/baby_bird"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="70dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/egbdfLearn"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_gravity="left"
                        android:layout_marginStart="35dp"
                        android:background="@drawable/lines_bird" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/egbdfTouch"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="right"
                    android:layout_marginStart="100dp"
                    android:background="@drawable/baby_bird" />

            </LinearLayout>

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</android.support.v7.widget.ContentFrameLayout>
